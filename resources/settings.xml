<settings>
    <category label="General">
        <setting id="data_path" type="folder" label="Data path" source="auto" option="false" />
        <setting id="show_notifications" type="bool" label="Show notifications" default="true" />
    </category>
    <category label="Metadata">
        <setting id="save_subtitles" type="bool" label="Save subtitles" default="false" />
        <setting id="save_nfo" type="bool" label="Save NFO" default="true" />
        <setting id="save_thumbnail" type="bool" label="Save thumbnail" default="true" />
    </category>
    <category label="yt-dlp options">
        <setting id="max_resolution" type="select" label="Max resolution" default="1080" values="4320|2160|1440|1080|720|480|360|240|144" />
        <setting id="force_overwrite" type="bool" label="Force overwrite existing files" default="false" />
    </category>
    <category label="Debug">
        <setting id="debug" type="bool" label="Enable debug" default="false" />
    </category>
</settings>
